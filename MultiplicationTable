#include <iostream>
#include <string>
using namespace std;


void PrintTableHeader()
{
	cout << "\n\n\t\t\tMultiplication Table From 1 To 10\n\n";
	cout << "\t";


	for (int i = 1; i <= 10; i++)
	{
		cout << i << "\t";
	}
	cout << "\n----------------------------------------------------------------------------------";
}

string ColumnSeparator(int Digit)
{
	if (Digit < 10)
	
		return "  |";
	else
		return " |";
	
}


void PrintMultiplicationTable()
{
	PrintTableHeader();
	for (int i = 1; i <= 10; i++)
	{
		
		cout << "\n";

		cout << i << ColumnSeparator(i) << "\t";
		for (int j = 1; j <= 10; j++)
		{
			cout << j * i << "	";
		}
	
	}
	
	cout << endl;

	}
